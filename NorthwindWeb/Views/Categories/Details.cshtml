@model NorthwindWeb.Models.Category

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<h2>Details</h2>
<hr />
<div>
    <ol class="breadcrumb">
        <li>
            @Html.ActionLink("Dashboard", "Home", "Dashboard")
        </li>
        <li>
            @Html.ActionLink("Categories", "Index", "Orders")
        </li>
        <li class="active">Details</li>
    </ol>
    <h4>Category</h4>
    <hr />
   
    

        <dl class="dl-horizontal">
            <dt>
                Category Name
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CategoryName)<br />
            </dd>

            <dt>
                Description
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Description)<br />
            </dd>

        </dl>
</div>
<p>
    @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-default" })
    @Html.ActionLink("Modify", "Edit", new { id = Model.CategoryID }, new { @class = "btn btn-default" })
   
</p>
