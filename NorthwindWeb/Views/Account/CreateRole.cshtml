@model NorthwindWeb.ViewModels.RoleInfoViewModel

@{
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
    ViewBag.Title = "Create Role";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>

</hgroup>
<ol class="breadcrumb">
    <li>
        @Html.ActionLink("Dashboard", "Home", "Dashboard")
    </li>
    <li>
        @Html.ActionLink("Roles", "RolesIndex", "Account")
    </li>
    <li class="active">Members</li>
</ol>
<hr />
<h2>Create a new role.</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <legend>Role information</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Name, htmlAttributes: new { style = "text-decoration:none; color:#333" })
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        <br />
        <p>
            <input class="btn btn-default" type="submit" value="Creare" />
            @Html.ActionLink("Back", "RolesIndex", "Account", new { @class = "btn btn-default" })
        </p>
    </fieldset>
}

