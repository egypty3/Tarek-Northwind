@model NorthwindWeb.Models.Territories

@{
    ViewBag.Title = "Modify";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<h2>Modify</h2>
    <hr />
    <ol class="breadcrumb">
        <li>
            @Html.ActionLink("Dashboard", "Home", "Dashboard")
        </li>
        <li>
            @Html.ActionLink("Regions", "Index", "Regions")
        </li>
        <li>
            @Html.ActionLink("Details", "Details", "Regions", new { id = Model.RegionID }, null)
        </li>
        <li class="active">Modify</li>
    </ol>


    @using (Html.BeginForm(new { TerritoryID = Model.TerritoryID }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Territories</h4>
            <hr />
            @Html.ValidationSummary(true)

            <div class="form-group">
                @Html.LabelFor(model => model.RegionID, "Region ID", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.RegionID)
                    @Html.ValidationMessageFor(model => model.RegionID)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.TerritoryDescription, "Territory Description", 
               htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TerritoryDescription)
                    @Html.ValidationMessageFor(model => model.TerritoryDescription)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back", "Details", "Regions", new { id = Model.RegionID}, new { @class = "btn btn-default" })
    </div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
