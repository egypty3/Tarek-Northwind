@model NorthwindWeb.Models.Territories

@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<h2>Add</h2>
    <hr />
    <ol class="breadcrumb">
        <li>
            @Html.ActionLink("Dashboard", "Home", "Dashboard")
        </li>
        <li>
            @Html.ActionLink("Regions", "Index", "Regions")
        </li>
        <li>
            @Html.ActionLink("Details", "Details","Regions", new { id = ViewBag.regionid }, null)
        </li>
        <li class="active">Add</li>
    </ol>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Territories</h4>
            <hr />
            @Html.ValidationSummary(true)
            <div class="form-group">
                @*@Html.LabelFor(model => model.TerritoryDescription, htmlAttributes: new { @class = "control-label col-md-2" })*@
                <span class="control-label col-md-2 bold"><strong>Territory Description</strong></span>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TerritoryDescription)
                    @Html.ValidationMessageFor(model => model.TerritoryDescription)
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Add" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back", "Details", "Regions", new { id = ViewBag.regionid }, new { @class = "btn btn-default" })
    </div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
