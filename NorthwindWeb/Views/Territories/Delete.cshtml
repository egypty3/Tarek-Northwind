@model NorthwindWeb.Models.Territories

@{
    ViewBag.Title = "Sterge";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

    <h2>Remove</h2>
    <hr />
    <ol class="breadcrumb">
        <li>
            @Html.ActionLink("Dashboard", "Home", "Dashboard")
        </li>
        <li>
            @Html.ActionLink("Regions", "Index", "Regions")
        </li>
        <li>
            @Html.ActionLink("Details", "Details", "Regions", new { id = Model.RegionID }, null)
        </li>
        <li class="active">Remove</li>
    </ol>

    <h3>Sure you want to delete?</h3>
    <div>
        <h4>Territories</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Region Description<br />
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Region.RegionDescription)<br />
            </dd>

            <dt>
                Territory Description<br />
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TerritoryDescription)<br />
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                @Html.ActionLink("Back", "Details", "Regions", new { id = Model.RegionID }, new { @class = "btn btn-default" })
                <input type="submit" value="Remove" class="btn btn-default" />
            </div>
        }
    </div>


