@{
    ViewBag.Title = "About";
}
@model IQueryable<NorthwindWeb.Models.Employees>
<div class="container" style="font-family:Tahoma">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                About us
                <small>We are glad that you are with us!</small>
            </h1>
            <ol class="breadcrumb">
                <li>
                    @Html.ActionLink("Home", "Index", "Home")
                </li>
                <li class="active">About us</li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">

            <img src="~/images/northwind-sign.jpg" height="800" width="500" class="img-responsive" />
        </div>
        <div class="col-md-6">
            <h2>Welcome to Northwind Phone!</h2>
            <p>
                Northwind Phone is one of the largest online stores with fully Romanian capital operating on the Romanian IT market.
                From the beginning, since 2017, we have had a dynamic growth and we have contributed to the consolidation of online commerce through a wide range of products at the best price and a simple, fast and pleasant shopping experience.
            </p>
            <p>
                We have over 70 products and we constantly negotiate with the manufacturers the best prices, we obtain substantial promotions and discounts that help us to satisfy the preferences of those who turn to us.
                We seek to achieve excellence through an open, responsible attitude, adapted to the needs of our clients.
            </p>
        </div>
    </div>
    <!-- Team Member Profiles -->
    <div class="row">
        <div class="col-lg-12">
            <h2 class="page-header">
                Find out who we are!
            </h2>
        </div>


        @foreach (var y in Model)
        {
            <div class="col-sm-4">
                <img src="~/images/@(y.FirstName+y.LastName).jpg" height="250" width="270" />
                <ul>
                    <li>
                     @y.TitleOfCourtesy   @y.LastName @y.FirstName-@y.Title
                    </li>
                  
                    <li>
                        @y.Country - @y.City - @y.Region 
                    </li>
                  
                    
                    <li>
                      Contact:  @y.HomePhone
                    </li>

                </ul>



            </div>

        }

    </div>
    <!-- Parteneri -->
    <div class="row">
        <div class="col-lg-12">
            <h2 class="page-header">Partners</h2>
        </div>
        <div class="col-md-2 col-sm-4 col-xs-6">
            <img src="/images/sony3.jpg" height="500" width="210" class="img-responsive img-customer">
        </div>
        <div class="col-md-2 col-sm-4 col-xs-6">
            <img src="~/images/hi-fun.png" height="500" width="300" class="img-responsive img-customer">
        </div>
        <div class="col-md-2 col-sm-4 col-xs-6">
            <img src="~/images/samsung.png" height="500" width="300" class="img-responsive img-customer">
        </div>
        <div class="col-md-2 col-sm-4 col-xs-6">
            <img src="/images/aple.png" height="500" width="300" class="img-responsive img-customer">
        </div>
        <div class="col-md-2 col-sm-4 col-xs-6">
            <img src="~/images/images.jpg" height="500" width="300" class="img-responsive img-customer">
        </div>
        <div class="col-md-2 col-sm-4 col-xs-6">
            <img src="~/images/wpid-nokia-logo.jpg" height="500" width="310" class="img-responsive img-customer">
        </div>
    </div>
</div>