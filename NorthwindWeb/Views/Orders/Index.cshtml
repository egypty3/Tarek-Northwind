@model IEnumerable<NorthwindWeb.Models.Order>

@using PagedList.Mvc;

@{ ViewBag.Title = "Orders";
                Layout = "~/Views/Shared/_LayoutDashboard.cshtml"; }
<div class="row">
    <div class="col-lg-12">
        <h2>Orders</h2>
        <hr />
        <ol class="breadcrumb">
            <li>
                @Html.ActionLink("Dashboard", "Home", "Dashboard")
            </li>
            <li class="active">Orders</li>
        </ol>
        <hr />
        <br />
        @Html.ActionLink("Add Order", "Create", "Orders", new { @class = "btn btn-default" })
    </div>
</div>
<br />

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>
                    Order list
                </h4>
            </div>
            <div class="panel-body">
                <table id="OrdersTable" class="cell-border hover order-column">
                    <thead>
                        <tr>
                            <th>
                                Order Id
                            </th>
                            <th>
                                Employee Name
                            </th>
                            <th>
                                Shipper
                            </th>
                            <th>
                                Delivery date
                            </th>
                            <th>
                                Ship Name
                            </th>
                            <th>
                                Address
                            </th>
                            <th>
                                Remove
                            </th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

