            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2 bold"><strong>Fax</strong></span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Fax)
                @Html.ValidationMessageFor(model => model.Fax)
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2 bold"><strong>Home Page</strong></span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.HomePage)
                @Html.ValidationMessageFor(model => model.HomePage)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-default" })
                <input type="submit" value="Create" class="btn btn-default" />
              
            </div>
        </div>
