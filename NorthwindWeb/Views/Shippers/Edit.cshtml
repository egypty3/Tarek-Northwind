@model NorthwindWeb.Models.Shipper

@{
    ViewBag.Title = "Modify";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<h2>Modify</h2>
<hr />
<ol class="breadcrumb">
    <li>
        @Html.ActionLink("Dashboard", "Home", "Dashboard")
    </li>
    <li>
        @Html.ActionLink("Shippers", "Index", "Shippers")
    </li>
    <li class="active">Modify</li>
</ol>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Expeditor</h4>
        <hr />
       
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.ShipperID)

        <div class="form-group">
            <span class="control-label col-md-2 bold"><strong>Company Name</strong></span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.CompanyName)
                @Html.ValidationMessageFor(model => model.CompanyName)
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2 bold"><strong>Phone</strong></span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Phone)
                @Html.ValidationMessageFor(model => model.Phone)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-default" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
