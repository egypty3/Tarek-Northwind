@model NorthwindWeb.Models.Shipper

@{
    ViewBag.Title = "Remove";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<h2>Sterge</h2>
<hr />
<ol class="breadcrumb">
    <li>
        @Html.ActionLink("Dashboard", "Home", "Dashboard")
    </li>
    <li>
        @Html.ActionLink("Shippers", "Index", "Shippers")
    </li>
    <li class="active">Remove</li>
</ol>
<h3>You're sure you want to delete it?</h3>
<div>
    
    <hr />
    <h4>Shipper</h4>
    <dl class="dl-horizontal">
        <dt>
            Company Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CompanyName)<br />
        </dd>

        <dt>
            Phone
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Phone)<br />
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @Html.ActionLink("Back", "Index", "Shippers", new { @class = "btn btn-default" })
            <input type="submit" value="Remove" class="btn btn-default" />
            
        </div>
    }
</div>
