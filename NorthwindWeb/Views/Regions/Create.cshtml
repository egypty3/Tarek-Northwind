@model NorthwindWeb.Models.Region

@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<h2>Add</h2>
    <hr />
    <ol class="breadcrumb">
        <li>
            @Html.ActionLink("Dashboard", "Home", "Dashboard")
        </li>
        <li>
            @Html.ActionLink("Regions", "Index", "Regions")
        </li>
        <li class="active">Add</li>
    </ol>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Region</h4>
            <hr />
            @Html.ValidationSummary(true)
            <div class="form-group">
                <span class="control-label col-md-2 bold"><strong>Region Description</strong></span>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.RegionDescription)
                    @Html.ValidationMessageFor(model => model.RegionDescription)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Add" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to the list", "Index", null, new { @class = "btn btn-default" })
    </div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
