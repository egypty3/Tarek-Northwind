@model NorthwindWeb.ViewModels.RegionIndex

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}


<h2>Details</h2>
    <hr />
    <ol class="breadcrumb">
        <li>
            @Html.ActionLink("Dashboard", "Home", "Dashboard")
        </li>
        <li>
            @Html.ActionLink("Regions", "Index", "Regions")
        </li>
        <li class="active">Details</li>
    </ol>

    <div>
        <div class="col-md-6">
            <h4>Region</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    Region ID
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.region.RegionID)<br />
                </dd>
                <dt>
                    Region Description
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.region.RegionDescription)<br />
                </dd>

            </dl>
            <p>
                @Html.ActionLink("Back to the list", "Index", "Regions", new { @class = "btn btn-default" })
                @Html.ActionLink("Modify", "Edit", new { id = Model.region.RegionID }, new { @class = "btn btn-default" })
            </p>
        </div>
        <div class="col-md-6">
            <h4>Territories</h4>
            <hr />
            @Html.ActionLink("Add", "Create", "Territories", new { id = ViewBag.RegionID }, new { @class = "btn btn-default" })
            <hr />
            @foreach (var y in Model.details)
            {
                <dl class="dl-horizontal">
                    <dt>
                        <br />
                        Territory ID
                    </dt>
                    <dd><br />
                        @y.TerritoryID<br />
                    </dd>
                    <dt>
                        Territory Description
                    </dt>
                    <dd>
                        @y.TerritoryDescription<br />
                    </dd>
                </dl>

                <p>
                    <br />
                    @Html.ActionLink("Modify", "Edit", "Territories", new { id = @y.TerritoryID }, new { @class = "btn btn-default" })
                    @Html.ActionLink("Remove", "Delete", "Territories", new { id = @y.TerritoryID }, new { @class = "btn btn-default" })
                </p>
            }
            
        </div>
    </div>


